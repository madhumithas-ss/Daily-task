#include <stdio.h>
#include <math.h>  // For M_PI constant (Ï€)

int main() {
    float length, breadth, side, base, height, radius;
    float area_rectangle, area_square, area_triangle, area_circle;

   
    printf("Enter length and breadth of rectangle: ");
    scanf("%f %f", &length, &breadth);
    area_rectangle = length * breadth;
    printf("Area of Rectangle = %.2f\n", area_rectangle);


    printf("\nEnter side of square: ");
    scanf("%f", &side);
    area_square = side * side;
    printf("Area of Square = %.2f\n", area_square);

   
    printf("\nEnter base and height of triangle: ");
    scanf("%f %f", &base, &height);
    area_triangle = 0.5 * base * height;
    printf("Area of Triangle = %.2f\n", area_triangle);


    printf("\nEnter radius of circle: ");
    scanf("%f", &radius);
    area_circle = M_PI * radius * radius;
    printf("Area of Circle = %.2f\n", area_circle);

    return 0;
}
#include <stdio.h>

int main() {
    int num, lastDigit, nextDigit, ascending = 1;

    printf("Enter a number: ");
    scanf("%d", &num);

    lastDigit = num % 10;
    num /= 10;

    while (num > 0) {
        nextDigit = num % 10;

        if (nextDigit > lastDigit) {
            ascending = 0; 
            break;
        }

        lastDigit = nextDigit;
        num /= 10;
    }

    if (ascending)
        printf("Digits are in ascending order.\n");
    else
        printf("Digits are NOT in ascending order.\n");

    return 0;
}